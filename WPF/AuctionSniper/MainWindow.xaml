<Window x:Class="AuctionSniperApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:auctionSniper="clr-namespace:AuctionSniperApplication"
        Title="Auction Sniper Main" Height="350" Width="525">
    <DataGrid Name="SnipersDataGrid" AutoGenerateColumns="False">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding ItemId}" Header="Item"></DataGridTextColumn>
            <DataGridTextColumn Binding="{Binding LastPrice}" Header="Last Price"></DataGridTextColumn>
            <DataGridTextColumn Binding="{Binding LastBid}" Header="Last Bid"></DataGridTextColumn>
            <DataGridTextColumn Binding="{Binding Status}" Header="Status"></DataGridTextColumn>
        </DataGrid.Columns>
    </DataGrid>
</Window>
